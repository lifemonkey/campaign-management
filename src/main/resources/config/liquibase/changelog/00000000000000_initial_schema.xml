        </createTable>

        <createTable tableName="status">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(30)"/>
        </createTable>

        <createTable tableName="campaign">
