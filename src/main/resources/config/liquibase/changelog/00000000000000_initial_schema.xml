<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <changeSet id="00000000000000" author="jhipster">
        <createSequence sequenceName="sequence_generator" startValue="1050" incrementBy="50"/>
    </changeSet>

    <!--
        JHipster core tables.
        The initial schema has the '00000000000001' id, so that it is over-written if we re-generate it.
    -->
    <changeSet id="00000000000001" author="jhipster">
        <createTable tableName="jhi_persistent_audit_event">
            <column name="event_id" type="bigint" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="principal" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="event_date" type="timestamp"/>
            <column name="event_type" type="varchar(255)"/>
        </createTable>

        <createTable tableName="jhi_persistent_audit_evt_data">
            <column name="event_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(150)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(255)"/>
        </createTable>
        <addPrimaryKey columnNames="event_id, name" tableName="jhi_persistent_audit_evt_data"/>

        <createIndex indexName="idx_persistent_audit_event"
                     tableName="jhi_persistent_audit_event"
                     unique="false">
            <column name="principal" type="varchar(50)"/>
            <column name="event_date" type="timestamp"/>
        </createIndex>

        <createIndex indexName="idx_persistent_audit_evt_data"
                     tableName="jhi_persistent_audit_evt_data"
                     unique="false">
            <column name="event_id" type="bigint"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="event_id"
                                 baseTableName="jhi_persistent_audit_evt_data"
                                 constraintName="fk_evt_pers_audit_evt_data"
                                 referencedColumnNames="event_id"
                                 referencedTableName="jhi_persistent_audit_event"/>

        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(50)"/>
            <column name="password" type="varchar(60)"/>
            <column name="first_name" type="varchar(200)"/>
            <column name="last_name" type="varchar(200)"/>
            <column name="expired_date" type="timestamp"/>
            <column name="image_url" type="varchar(255)" />
            <column name="image_blob" type="longblob" />
            <!-- constraints -->
            <column name="role_id" type="bigint" />
            <!-- Auditing fields -->
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)" />
            <column name="last_modified_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="roles">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(20)"/>
            <column name="description" type="varchar(4000)"/>
            <column name="can_approve_reward" type="int"/>
            <column name="can_reject_reward" type="int"/>
            <column name="campaign_management" type="int"/>
            <column name="rule_management" type="int"/>
            <column name="prize_management" type="int"/>
        </createTable>

        <createTable tableName="refresh_token">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="varchar(255)"/>
            <column name="expired_date" type="timestamp"/>
            <!-- constraints -->
            <column name="user_id" type="bigint"/>
            <!-- Auditing fields -->
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)" />
            <column name="last_modified_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="token_black_list">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="varchar(255)"/>
            <column name="expired_date" type="timestamp"/>
        </createTable>

        <createTable tableName="status">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(30)"/>
        </createTable>

        <createTable tableName="campaign">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(4000)"/>
            <column name="from_date" type="timestamp"/>
            <column name="end_date" type="timestamp"/>
            <column name="campaign_type" type="int"/>
            <column name="notes" type="varchar(4000)"/>
            <!-- constraints -->
            <column name="status_id" type="bigint"/>
            <column name="approved_rejected_by" type="bigint"/>
            <!-- Auditing fields -->
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)" />
            <column name="last_modified_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="files">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)"/>
            <column name="description" type="varchar(4000)"/>
            <column name="file_type" type="int"/>
            <column name="image_url" type="varchar(255)"/>
            <column name="image_blob" type="longblob" />
            <!-- constraints -->
            <column name="campaign_id" type="bigint"/>
            <!-- Auditing fields -->
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)" />
            <column name="last_modified_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="target_list">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(4000)"/>
            <column name="target_type" type="int"/>
            <!-- Auditing fields -->
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)" />
            <column name="last_modified_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="campaign_target_list">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="campaign_id" type="bigint"/>
            <column name="target_list_id" type="bigint"/>
        </createTable>

        <createTable tableName="target_list_account">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="account_id" type="bigint"/>
            <column name="target_list_id" type="bigint"/>
        </createTable>

        <createTable tableName="accounts">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="external_id" type="varchar(22)" />
            <column name="first_name" type="varchar(200)"/>
            <column name="last_name" type="varchar(200)"/>
            <!-- Auditing fields -->
            <column name="created_by" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="varchar(50)" />
            <column name="last_modified_date" type="timestamp" defaultValueDate="${now}">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Config relationship -->
        <addForeignKeyConstraint baseColumnNames="role_id"
                                 baseTableName="users"
                                 constraintName="fk_user_role_role_id"
                                 referencedColumnNames="id"
                                 referencedTableName="roles"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="refresh_token"
                                 constraintName="fk_refresh_token_user_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>

        <addForeignKeyConstraint baseColumnNames="status_id"
                                 baseTableName="campaign"
                                 constraintName="fk_campaign_status_status_id"
                                 referencedColumnNames="id"
                                 referencedTableName="status"/>

        <addForeignKeyConstraint baseColumnNames="approved_rejected_by"
                                 baseTableName="campaign"
                                 constraintName="fk_campaign_approved_rejected_by_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>

        <addForeignKeyConstraint baseColumnNames="campaign_id"
                                 baseTableName="files"
                                 constraintName="fk_campaign_files_campaign_id"
                                 referencedColumnNames="id"
                                 referencedTableName="campaign"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"/>

        <!-- Config ManyToMany for campaign vs target_list -->
        <addForeignKeyConstraint baseColumnNames="campaign_id"
                                 baseTableName="campaign_target_list"
                                 constraintName="fk_campaign_target_list_campaign_id"
                                 referencedColumnNames="id"
                                 referencedTableName="campaign"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint baseColumnNames="target_list_id"
                                 baseTableName="campaign_target_list"
                                 constraintName="fk_campaign_target_list_target_list_id"
                                 referencedColumnNames="id"
                                 referencedTableName="target_list"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"/>

        <!-- Config ManyToMany for target_list vs account -->
        <addForeignKeyConstraint baseColumnNames="account_id"
                                 baseTableName="target_list_account"
                                 constraintName="fk_target_list_account_account_id"
                                 referencedColumnNames="id"
                                 referencedTableName="accounts"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"/>

        <addForeignKeyConstraint baseColumnNames="target_list_id"
                                 baseTableName="target_list_account"
                                 constraintName="fk_target_list_account_target_list_id"
                                 referencedColumnNames="id"
                                 referencedTableName="target_list"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/roles.csv"
                  separator=";"
                  tableName="roles"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/users.csv"
                  separator=";"
                  tableName="users"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/accounts.csv"
                  separator=";"
                  tableName="accounts"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/target_list.csv"
                  separator=";"
                  tableName="target_list"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/target_list_account.csv"
                  separator=";"
                  tableName="target_list_account"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/status.csv"
                  separator=";"
                  tableName="status"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/campaign.csv"
                  separator=";"
                  tableName="campaign"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/campaign_target_list.csv"
                  separator=";"
                  tableName="campaign_target_list"/>

        <loadData encoding="UTF-8"
                  file="config/liquibase/files.csv"
                  separator=";"
                  tableName="files"/>
    </changeSet>

    <changeSet author="jhipster" id="00000000000002" context="test">
        <createTable tableName="jhi_date_time_wrapper">
            <column  name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="jhi_date_time_wrapperPK"/>
            </column>
            <column name="instant" type="timestamp"/>
            <column name="local_date_time" type="timestamp"/>
            <column name="offset_date_time" type="timestamp"/>
            <column name="zoned_date_time" type="timestamp"/>
            <column name="local_time" type="time"/>
            <column name="offset_time" type="time"/>
            <column name="local_date" type="date"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
